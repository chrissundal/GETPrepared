<Window x:Class="WalkandWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WalkandWin"
        mc:Ignorable="d"
        Title="Walk and Win" Height="450" Width="800" Background="#f0f0f0">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Name="Message" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="0"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
            <TextBlock Name="CountdownText" HorizontalAlignment="Center"/>
            <TextBlock Name="DueText" HorizontalAlignment="Center" Foreground="Crimson" Visibility="Collapsed"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="DoneButton" Content="Done" Width="100" Height="50" Click="DoneButton_Click" Visibility="Collapsed"/>
                <Button Name="ResetButton" Content="Reset" Width="100" Height="50" Click="ResetButton_Click"/>
            </StackPanel>
        </StackPanel>
        <TextBlock Name="PointsText" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="2" Margin="50"/>
        <TextBlock Name="StatusMessage" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="3"/>
    </Grid>
</Window>

